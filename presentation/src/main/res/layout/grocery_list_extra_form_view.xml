<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.revolhope.presentation.library.component.form.view.FormInputView
        android:id="@+id/item_price_form_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_standard"
        app:layout_constraintTop_toTopOf="parent"
        app:startIcon="@drawable/ic_email_address" />

    <com.revolhope.presentation.library.component.form.view.FormInputView
        android:id="@+id/market_form_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_standard_large"
        app:layout_constraintTop_toBottomOf="@id/item_price_form_input"
        app:layout_constraintBottom_toBottomOf="parent"
        app:startIcon="@drawable/ic_email_address" />

</androidx.constraintlayout.widget.ConstraintLayout>
