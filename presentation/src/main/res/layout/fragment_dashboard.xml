<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".feature.dashboard.DashboardActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_standard_large">

        <TextView
            android:id="@+id/list_title"
            style="@style/Text.Headline4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/my_lists"
            android:textColor="@color/primaryTextColorAccent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            style="@style/Separator"
            android:layout_marginTop="@dimen/margin_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/list_title" />

        <com.revolhope.presentation.library.component.grocerylist.view.GroceryListView
            android:id="@+id/current_grocery_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/list_title"
            android:layout_marginTop="@dimen/margin_standard_large"
            android:layout_marginHorizontal="@dimen/margin_standard" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
