<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:paddingHorizontal="@dimen/margin_medium"
    android:paddingVertical="@dimen/margin_standard">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="5dp"
        android:indeterminateDrawable="@drawable/progress_bar_text_primary_color"
        android:paddingVertical="@dimen/margin_standard_large"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/form_submit_button"
        app:layout_constraintEnd_toEndOf="@id/form_submit_button"
        app:layout_constraintStart_toStartOf="@id/form_submit_button"
        app:layout_constraintTop_toTopOf="@id/form_submit_button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/form_submit_button"
        style="@style/Button.Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Submit" />

</androidx.constraintlayout.widget.ConstraintLayout>
