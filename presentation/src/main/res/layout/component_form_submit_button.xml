<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:paddingHorizontal="@dimen/margin_medium"
    android:paddingVertical="@dimen/margin_standard">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/form_submit_button"
        style="@style/Button.Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Submit" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/form_buttons_loader"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/form_submit_button"
        app:layout_constraintTop_toTopOf="@id/form_submit_button"
        app:lottie_autoPlay="false"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/loader_anim"
        app:lottie_renderMode="hardware" />

</androidx.constraintlayout.widget.ConstraintLayout>