<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Text styles -->
    <style name="Text.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/abel_regular</item>
        <item name="android:fontFamily">@font/abel_regular</item>
        <item name="android:textSize">@dimen/Text.Headline1</item>
    </style>

    <style name="Text.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/abel_regular</item>
        <item name="android:fontFamily">@font/abel_regular</item>
        <item name="android:textSize">@dimen/Text.Headline2</item>
    </style>

    <style name="Text.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/abel_regular</item>
        <item name="android:fontFamily">@font/abel_regular</item>
        <item name="android:textSize">@dimen/Text.Headline3</item>
    </style>

    <style name="Text.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/abel_regular</item>
        <item name="android:fontFamily">@font/abel_regular</item>
        <item name="android:textSize">@dimen/Text.Headline4</item>
    </style>

    <style name="Text.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/abel_regular</item>
        <item name="android:fontFamily">@font/abel_regular</item>
        <item name="android:textSize">@dimen/Text.Headline5</item>
    </style>

    <style name="Text.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/abel_regular</item>
        <item name="android:fontFamily">@font/abel_regular</item>
        <item name="android:textSize">@dimen/Text.Headline6</item>
    </style>

    <style name="Text.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/abel_regular</item>
        <item name="android:fontFamily">@font/abel_regular</item>
        <item name="android:textSize">@dimen/Text.Subtitle1</item>
    </style>

    <style name="Text.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/abel_regular</item>
        <item name="android:fontFamily">@font/abel_regular</item>
        <item name="android:textSize">@dimen/Text.Subtitle2</item>
    </style>

    <style name="Text.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/Text.Body1</item>
    </style>

    <style name="Text.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/Text.Body2</item>
    </style>

    <style name="Text.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/Text.Button</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Text.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/Text.Caption</item>
    </style>

    <style name="Text.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/Text.Overline</item>
        <item name="textAllCaps">true</item>
    </style>

    <!-- Separator -->
    <style name="Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/primaryTextColorOpacity70</item>
        <item name="android:alpha">.5</item>
    </style>

    <style name="Separator.Accent">
        <item name="android:background">@color/primaryTextColorAccentOpacity70</item>
    </style>

    <!-- Inputs -->
    <style name="Input" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextColor">@color/red_dark_opacity_70</item>
        <item name="errorTextAppearance">@style/Text.Subtitle2</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/primaryDarkColor</item>
        <item name="helperTextTextAppearance">@style/Text.Subtitle2</item>
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintTextAppearance">@style/Text.Subtitle2</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_standard</item>
        <item name="startIconTint">@color/gray_800</item>
        <item name="endIconTint">@color/gray_800</item>
    </style>

    <!-- Buttons -->
    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/Text.Button</item>
    </style>

    <style name="Button.Submit">
        <item name="android:layout_marginHorizontal">@dimen/margin_standard</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/Text.Button</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_standard</item>
        <item name="strokeColor">@color/primaryTextColorOpacity70</item>
        <item name="rippleColor">@color/primaryTextColorAccentOpacity70</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button.Outlined.Small" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/Text.Button</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_standard</item>
        <item name="strokeColor">@color/primaryTextColorOpacity70</item>
        <item name="rippleColor">@color/primaryTextColorAccentOpacity70</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/Text.Overline</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Icons -->
    <style name="Icon">
        <item name="android:layout_width">@dimen/icon_size_standard</item>
        <item name="android:layout_height">@dimen/icon_size_standard</item>
        <item name="tint">@color/primaryTextColorOpacity70</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Icon.Accent">
        <item name="tint">@color/primaryTextColorAccentOpacity70</item>
    </style>

    <style name="Icon.Small">
        <item name="android:layout_width">@dimen/icon_size_small</item>
        <item name="android:layout_height">@dimen/icon_size_small</item>
    </style>

    <style name="Icon.Small.Accent">
        <item name="tint">@color/primaryTextColorAccentOpacity70</item>
    </style>

    <style name="Icon.SemiSmall">
        <item name="android:layout_width">@dimen/icon_size_semi_small</item>
        <item name="android:layout_height">@dimen/icon_size_semi_small</item>
    </style>

    <style name="Icon.SemiSmall.Accent">
        <item name="tint">@color/primaryTextColorAccentOpacity70</item>
    </style>

    <!-- CardView -->
    <style name="Card">
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- Avatar -->
    <style name="Avatar">
        <item name="android:layout_width">@dimen/avatar_size_standard</item>
        <item name="android:layout_height">@dimen/avatar_size_standard</item>
        <item name="android:background">@drawable/shape_avatar_background</item>
        <item name="android:padding">@dimen/margin_medium</item>
    </style>

    <style name="Avatar.Big">
        <item name="android:layout_width">@dimen/avatar_size_big</item>
        <item name="android:layout_height">@dimen/avatar_size_big</item>
    </style>

    <!-- Lottie Animations -->
    <style name="Animation">
        <item name="lottie_renderMode">hardware</item>
        <item name="lottie_autoPlay">true</item>
        <item name="lottie_loop">true</item>
    </style>

    <!-- Bottom Sheet Dialogs -->
    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetModalStyle</item>
    </style>

    <style name="BottomSheetModalStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_card_top_corners_rounded</item>
    </style>

</resources>
