<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.revolhope.presentation">

    <application>
        <activity
            android:name="com.revolhope.presentation.feature.splash.SplashActivity"
            android:theme="@style/Theme.Grocery.NoActionBar"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".feature.register.RegisterActivity"
            android:theme="@style/Theme.Grocery.NoActionBar" />

        <activity android:name=".feature.login.LoginActivity"
            android:theme="@style/Theme.Grocery.NoActionBar" />

        <activity android:name=".feature.dashboard.DashboardActivity"
            android:theme="@style/Theme.Grocery" />

        <activity android:name=".feature.grocerylist.GroceryListActivity"
            android:theme="@style/Theme.Grocery" />

    </application>
</manifest>
